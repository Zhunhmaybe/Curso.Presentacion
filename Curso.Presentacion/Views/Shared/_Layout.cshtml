<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Curso.Presentacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Curso.Presentacion.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #1e1e2f;
            color: #ffffff;
        }

        .navbar {
            background-color: #2c2c3c !important;
        }

        .navbar-brand,
        .nav-link {
            color: #ffffff !important;
        }

            .nav-link.btn {
                margin-right: 0.5rem;
            }

            .nav-link.btn-info {
                background-color: #0dcaf0;
                color: #000 !important;
            }

            .nav-link.btn-dark {
                background-color: #6c757d;
                color: #fff !important;
            }

            .nav-link.btn-light {
                background-color: #f8f9fa;
                color: #000 !important;
            }

            .nav-link.text-dark {
                color: #ffffff !important;
            }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        .footer {
            background-color: #2c2c3c;
            color: #bbbbbb;
            padding: 1rem 0;
        }

        a {
            color: #0dcaf0;
        }

        .alert-warning {
            background-color: #343a40;
            border-color: #ffc107;
            color: #ffc107;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Curso.Presentacion</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn btn-info text-dark" asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-dark" asp-area="" asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ListasTareas" asp-action="Index">📋 ListasTareas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tareas" asp-action="Index">✅ Tareas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container alert alert-warning shadow">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            &copy; 2025 - Curso.Presentacion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>
