@model IEnumerable<Curso.Presentacion.Models.ViewModelListasTareas>

@{
    ViewData["Title"] = "Listas de Tareas";
}

<style>
    body {
        background-color: #1e1e2f;
        color: #ffffff;
    }

    .table-dark-custom {
        background-color: #2c2c3c;
        color: #ffffff;
    }

        .table-dark-custom thead {
            background-color: #3d3d5c;
            color: #ffffff;
        }

        .table-dark-custom tr:hover {
            background-color: #444466;
        }

    .btn-custom {
        color: #000;
        font-weight: bold;
    }

    .btn-create {
        background-color: #00c896;
        color: #000;
    }

    .btn-edit {
        background-color: #ffc107;
        color: #000;
    }

    .btn-details {
        background-color: #0dcaf0;
        color: #000;
    }

    .btn-delete {
        background-color: #ff4d4d;
        color: #000;
    }

    a.btn:hover {
        opacity: 0.9;
    }

    h2 {
        color: #00c896;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">📋 Listas de Tareas</h2>
        <a asp-action="Create" class="btn btn-create btn-custom shadow-sm">
            ➕ Nueva Lista
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark-custom table-hover shadow-sm rounded">
            <thead class="text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().ListaID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UsuarioID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.First().nombreUsuario)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ListaID)</td>
                        <td>@Html.DisplayFor(modelItem => item.UsuarioID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreUsuario)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ListaID }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
