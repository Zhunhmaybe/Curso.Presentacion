@model IEnumerable<Curso.Presentacion.Models.ViewModelListasTareas>

@{
    ViewData["Title"] = "Listas de Tareas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">📋 Listas de Tareas</h2>
        <a asp-action="Create" class="btn btn-success">➕ Nueva Lista</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().ListaID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UsuarioID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.First().nombreUsuario)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ListaID)</td>
                        <td>@Html.DisplayFor(modelItem => item.UsuarioID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreUsuario)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ListaID }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
